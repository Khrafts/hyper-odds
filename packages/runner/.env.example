# RPC Configuration
RPC_URL=https://api.hyperliquid.xyz/evm
PRIVATE_KEY=your_resolver_private_key_here

# Contract Addresses (use actual deployed addresses)
ORACLE_ADDRESS=0x2345678901234567890123456789012345678901
FACTORY_ADDRESS=0x1234567890123456789012345678901234567890

# Hyperliquid API
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz/info

# Webhook Configuration
WEBHOOK_PORT=3000               # Port for webhook server
WEBHOOK_SECRET=your_webhook_secret_here  # Secret for webhook signature verification

# Runner Configuration
BATCH_SIZE=10                   # Max markets to process in parallel
RETRY_ATTEMPTS=3                # Number of retry attempts for failed resolutions
RETRY_DELAY_MS=5000            # Delay between retries
GAS_LIMIT_MULTIPLIER=1.2       # Gas limit multiplier for transactions

# Logging
LOG_LEVEL=info                  # debug, info, warn, error