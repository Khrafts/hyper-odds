# Development environment configuration
# This file is safe to commit as it contains no secrets

NODE_ENV=development
LOG_LEVEL=debug
PORT=3000
HEALTH_CHECK_PORT=3001
METRICS_PORT=3002

# Database (Docker)
DATABASE_URL=postgresql://runner:runner_password@localhost:5432/runner_db

# Redis (Docker)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Job Processing
MAX_CONCURRENT_JOBS=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
RESOLUTION_BUFFER_TIME=30000

# Oracle Configuration
DISPUTE_WINDOW=600
GAS_LIMIT_MULTIPLIER=1.2
MAX_GAS_PRICE_GWEI=50
TRANSACTION_TIMEOUT=300000

# Development flags
ENABLE_DEBUG_LOGS=true
SIMULATE_RESOLUTION=true
SKIP_BLOCKCHAIN_EVENTS=false

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000